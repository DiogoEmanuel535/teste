programa {
  funcao inicio() {
    //Variaveis
    real valor1 ,valor2, valor3,media_aritmetica

    //Entrada
    escreva("Insirar o valor gasto no mês 1 ")
    leia(valor1)
    escreva("Insirar o valor gasto no mês 2 ")
    leia(valor2)
    escreva("Insirar o valor gasto no mês 3 ")
    leia(valor3)

    //Processo

    media_aritmetica=(valor1+valor2+valor3)/3

    //Saida

    escreva("A media gasta com combustível é :", media_aritmetica )
  
  
  }
}
